<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:elevation="3dp"
        app:cardBackgroundColor="@color/colorWhite"
        app:cardElevation="3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <ImageView
                android:paddingLeft="10dp"
                android:paddingRight="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_menu"
                android:id="@+id/ivPlotList_Menu"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvPlotList_Name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:drawableLeft="@drawable/ic_owner"
                android:drawablePadding="10dp"
                android:fontFamily="@font/sofiapro_light"
                android:gravity="center_vertical"
                android:text="Anmol Shirke (Brother)" />


            <TextView
                android:id="@+id/tvPlotList_PlotNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="10dp"
                android:fontFamily="@font/sofiapro_light"
                android:gravity="center_vertical"
                android:text="Plot No. : 10" />

            <TextView
                android:id="@+id/tvPlotList_plotArea"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="10dp"
                android:fontFamily="@font/sofiapro_light"
                android:gravity="center_vertical"
                android:text="Plot Area. : 7 Acre" />


            <TextView
                android:id="@+id/tvPlotList_WaterRes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="10dp"
                android:fontFamily="@font/sofiapro_light"
                android:gravity="center_vertical"
                android:text="Water Resource : Well" />

        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>